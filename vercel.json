{
  "version": 2,
  "builds": [
    {
      "src": "**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/publications",
      "dest": "/publications/index.html"
    },
    {
      "src": "/projects",
      "dest": "/projects/index.html"
    },
    {
      "src": "/blog",
      "dest": "/blog/index.html"
    },
    {
      "src": "/contact",
      "dest": "/contact/index.html"
    },
    {
      "src": "/assets/(.*)",
      "dest": "/public/assets/$1"
    },
    {
      "src": "/(.*)\\.(?:js|css|svg|jpg|png|ico)$",
      "dest": "/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1",
      "status": 404
    }
  ],
  "cleanUrls": true,
  "trailingSlash": false
} 