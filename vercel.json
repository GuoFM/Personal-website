{
  "version": 2,
  "builds": [
    {
      "src": "**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    {
      "src": "/",
      "dest": "/index.html"
    },
    {
      "src": "/publications",
      "dest": "/publications/index.html"
    },
    {
      "src": "/projects",
      "dest": "/projects/index.html"
    },
    {
      "src": "/blog",
      "dest": "/blog/index.html"
    },
    {
      "src": "/contact",
      "dest": "/contact/index.html"
    },
    { "src": "/data/(.*)", "dest": "/data/$1" }
  ],
  "github": {
    "enabled": true,
    "silent": false
  }
} 